@model List<Proje1_Portfolyo.Models.Tbl_Education>

@{
    ViewBag.Title = "EducationList";
    Layout = "~/Views/Admin/Index.cshtml";
}


<h2 class="mb-4">Eğitim Listesi</h2>

<table class="table table-bordered ">
    <tr>
        <th>Eğitim ID</th>
        <th>Okul Adı</th>
        <th>Eğitim Derecesi</th>
        <th>Eğitim Tarihi</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EducationID</td>
            <td>@item.Subtitle</td>
            <td>@item.Title</td>
            <td>@item.EducationDate</td>
            <td>@item.Description</td>

            <td><a href="/Education/DeleteEducation/@item.EducationID" class="btn btn-danger ">Sil</a></td>
            <td><a href="/Education/UpdateEducation/@item.EducationID" class="btn btn-success ">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Education/CreateEducation/" class="btn btn-info">Eğitim Girişi</a>


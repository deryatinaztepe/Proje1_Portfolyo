@model Proje1_Portfolyo.Models.Tbl_Experience

@{
    ViewBag.Title = "CreateExperience";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="m-4">Yeni Deneyim Girişi</h2>

<form method="post">
    <label>Şirket Adı</label>
    @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CompanyName, "", new {@style="color:red"})
    <br />

    <label>İş Tarihi</label>
    @Html.TextBoxFor(x => x.WorkDate, new { @class = "form-control" })
    <br />

    <label>Unvan</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />

    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, 6, 0, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Deneyimi Ekle</button>
    <a href="/Experience/ExperienceList/" class="btn btn-info">Geri Dön</a>
</form>




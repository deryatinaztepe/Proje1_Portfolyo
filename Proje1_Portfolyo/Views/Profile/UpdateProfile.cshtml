@model Proje1_Portfolyo.Models.Tbl_Profile

@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/Admin/Index.cshtml";
}


<h2 class="m-4">Profil Güncelleme Sayfası</h2>

<form method="post">


    @Html.HiddenFor(x => x.ProfileID, new { @class = "form-control" })


    <label>Unvan</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })

    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, 6, 0, new { @class = "form-control" })
    <br />

    <label>Adres</label>
    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })

    <br />
    <label>Email</label>
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })

    <br />
    <label>Telefon</label>
    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })

    <br />
    <label>Github</label>
    @Html.TextBoxFor(x => x.Github, new { @class = "form-control" })

    <br />

    <label>Resim</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />

    <label>Lokasyon</label>
    @Html.TextBoxFor(x => x.MapLocation, new { @class = "form-control" })

    <br />

    <button class="btn btn-success">Bilgiyi Güncelle</button>
</form>


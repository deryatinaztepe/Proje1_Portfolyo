@model List<Proje1_Portfolyo.Models.Tbl_Category>

@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Kategori Listesi</h2>

<table class="table table-bordered ">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori Adı</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
     
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryStatus</td>


            <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger ">Sil</a></td>
            <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-success ">Güncelle</a></td>
        </tr>
    }
</table>
        <a href="/Category/CreateCategory/" class="btn btn-info">Kategori Girişi</a>
  
@model List<Proje1_Portfolyo.Models.Tbl_SocialMedia>
@{
    ViewBag.Title = "SocialMediaList";
    Layout = "~/Views/Admin/Index.cshtml";
}


<h2 class="mb-4"> Sosyal Medya Hesapları</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Sosyal Medya Adı</th>
        <th>İkon</th>
        <th>Durum</th>
        <th>Sil</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SocialMediaID</td>
            <td>@item.Title</td>
            <td>@item.Icon</td>


            @if (item.Status == false)
            {
                <td><a href="/SocialMedia/SocialMediaStatusChangeToTrue/@item.SocialMediaID" class="btn btn-success">Aktif</a></td>
            }
            else
            {
                <td><a href="/SocialMedia/SocialMediaStatusChangeToFalse/@item.SocialMediaID" class="btn btn-warning">Pasif</a></td>
            }

            <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID" class="btn btn-danger">Sil</a></td>

        </tr>
    }
    
</table>
<a href="/SocialMedia/CreateSocialMedia/" class="btn btn-info">Hesap Ekle</a>
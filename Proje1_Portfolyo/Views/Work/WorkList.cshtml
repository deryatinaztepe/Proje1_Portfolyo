
@model List<Proje1_Portfolyo.Models.Tbl_Work>
@{
    ViewBag.Title = "WorkList";
    Layout = "~/Views/Admin/Index.cshtml";
}


<h2 class="mb-4">Çalışmalarım</h2>

<table class="table table-bordered ">
    <tr>
        <th>Çalışma ID</th>
        <th>Çalışma Adı</th>
        <th>Açıklama</th>
        <th>Resim</th>
        <th>Github</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.WorkID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.ImageUrl</td>
            <td>@item.GithubUrl</td>

            <td><a href="/Work/DeleteWork/@item.WorkID" class="btn btn-danger ">Sil</a></td>
            <td><a href="/Work/UpdateWork/@item.WorkID" class="btn btn-success ">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Work/CreateWork/" class="btn btn-info">Çalışma Ekle</a>
